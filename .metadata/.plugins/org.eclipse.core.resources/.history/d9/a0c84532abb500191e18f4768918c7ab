	public static String getAppConfigValue(String key) {
		if (resConfig == null)
			resConfig = ResourceBundle.getBundle("app-config");
		try {
			return resConfig.getString(key);
		} catch (Exception e) {
			return "";
		}
	}
	
	/*public static String getAppConfigValue(String key, boolean checkEncrypt) {
