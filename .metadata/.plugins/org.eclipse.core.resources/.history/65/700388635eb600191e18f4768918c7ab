package com.org.shoppingcart.core.subscriber;

import org.springframework.amqp.rabbit.annotation.RabbitListener;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.org.shoppingcart.core.request.ProductRequest;
import com.org.shoppingcart.core.response.ProductResponse;
import com.org.shoppingcart.core.service.ShoppingCartService;

@Component
public class Subcriber {
	
	@Autowired
	private ShoppingCartService shoppingCartService;
	
	
	public Subcriber(ShoppingCartService shoppingCartService) {
		super();
		this.shoppingCartService = shoppingCartService;
	}


	@RabbitListener(queues = "${javainuse.rabbitmq.queue}")
	public void receivedMessage(ProductRequest request) {
		System.out.println("Received Message: " + request.getProductList().toString());
		ProductResponse response = shoppingCartService.findAllProducts();
	}
}