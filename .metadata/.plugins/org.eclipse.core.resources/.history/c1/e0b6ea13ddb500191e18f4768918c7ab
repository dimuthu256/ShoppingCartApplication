package com.rg.shoppingcart.bean;

import java.io.Serializable;

import javax.faces.bean.ManagedBean;
import javax.faces.bean.SessionScoped;

import com.org.shoppingcart.response.ProductResponse;
import com.org.shoppingcart.service.impl.ProductServiceImpl;

@SessionScoped
@ManagedBean
public class ProductManagedBean implements Serializable {

	private static final long serialVersionUID = 1L;

	private ProductResponse productDtos;

	private String response;

	public ProductManagedBean() {
		ProductServiceImpl productServiceImpl = new ProductServiceImpl();
		this.productDtos = productServiceImpl.findAll();
	}

	public String index() {
		ProductServiceImpl productServiceImpl = new ProductServiceImpl();
		this.productDtos = productServiceImpl.findAll();
		return "index?faces-redirect=true";
	}

	public String checkout() {
		ProductServiceImpl productServiceImpl = new ProductServiceImpl();
		try {
			this.setResponse(productServiceImpl.checkoutItems(this.productDtos));
		} catch (Exception e) {
			this.setResponse("failed");
		}
		return "welcome?faces-redirect=true";
	}

	public String getResponse() {
		return response;
	}

	public void setResponse(String response) {
		this.response = response;
	}

}