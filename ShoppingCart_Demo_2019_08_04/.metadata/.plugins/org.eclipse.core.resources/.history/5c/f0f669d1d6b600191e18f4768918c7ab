package com.org.shoppingcart.rest.controller;

import java.util.HashMap;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.inova.applogger.util.AllowLogging;
import com.org.shoppingcart.rest.model.Employee;
import com.org.shoppingcart.rest.request.ProductRequest;
import com.org.shoppingcart.rest.response.ProductResponse;
import com.org.shoppingcart.rest.service.ShoppingCartService;
import com.org.shoppingcart.rest.service.impl.RabbitMQSender;

@RestController
@RequestMapping(value = "/api")
public class RabbitMQWebController {

	@Autowired
	RabbitMQSender rabbitMQSender;

	@Autowired
	private ShoppingCartService shoppingCartService;

	public RabbitMQWebController(ShoppingCartService shoppingCartService) {
		super();
		this.shoppingCartService = shoppingCartService;
	}

	@AllowLogging
	@GetMapping(value = "products")
	public ProductResponse findAllProducts() {
		return shoppingCartService.findAllProducts();
	}

	@CrossOrigin
	@AllowLogging
	@PostMapping(value = "product")
	public ProductResponse submitAllProducts(@RequestBody ProductRequest productList) {
		System.out.println("HIIIIIIIIIIIIIIIIII");
		ProductResponse response = new ProductResponse();
		try {
			rabbitMQSender.send(productList);
			response.setStatus("Success");
			response.setStatusCode(200);
		} catch (Exception e) {
			response.setStatus("Failed");
			response.setStatusCode(0);
		}
		return response;
	}

	@GetMapping(value = "test")
	public String test() {
		return "Test Success";
	}

	@GetMapping(value = "producer")
	public Map<String, Object> producer(@RequestParam("empName") String empName, @RequestParam("empId") String empId) {
		Map<String, Object> response = new HashMap<>();
		Employee emp = new Employee();
		emp.setEmpId(empId);
		emp.setEmpName(empName);
		rabbitMQSender.send(emp);
		response.put("DATA", "Message sent to the RabbitMQ JavaInUse Successfully");
		return response;
	}

}
