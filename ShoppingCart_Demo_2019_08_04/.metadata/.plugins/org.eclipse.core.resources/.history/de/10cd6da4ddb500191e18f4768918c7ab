				#{product.description}
			</h:column>
			<h:column>
				<f:facet name="header">Price</f:facet>
				#{product.price}
			</h:column>
			<h:column>
				<f:facet name="header">Quantity</f:facet>
				#{product.quantity}
			</h:column>
			<h:column>
				<f:facet name="header">Status</f:facet>
				#{product.status}
			</h:column>
			<h:column>
				<f:facet name="header">Option</f:facet>
				<h:commandLink value="Buy Now"
					action="#{cartManagedBean.buy(product)}"></h:commandLink>
			</h:column>
		</h:dataTable>
	</h:form>
	
