package com.rg.shoppingcart.controller;

import java.io.Serializable;
import java.util.ArrayList;
import java.util.List;

import javax.faces.bean.ManagedBean;
import javax.faces.bean.SessionScoped;

import com.org.shoppingcart.dto.ItemDto;
import com.org.shoppingcart.dto.Product;

@SessionScoped
@ManagedBean
public class CartManagedController implements Serializable {

	private static final long serialVersionUID = 1L;

	private List<ItemDto> itemDtos;

	public CartManagedController() {
		this.itemDtos = new ArrayList<ItemDto>();
	}

	public List<ItemDto> getItems() {
		return itemDtos;
	}

	public void setItems(List<ItemDto> itemDtos) {
		this.itemDtos = itemDtos;
	}

	public String buy(Product product) {
		int index = this.exists(product);
		if (index == -1) {
			this.itemDtos.add(new ItemDto(product, 1));
		} else {
			int quantity = this.itemDtos.get(index).getQuantity() + 1;
			this.itemDtos.get(index).setQuantity(quantity);
		}
		return "cart?faces-redirect=true";
	}

	public String delete(Product product) {
		int index = this.exists(product);
		this.itemDtos.remove(index);
		return "cart?faces-redirect=true";
	}

	public double total() {
		double s = 0;
		for (ItemDto itemDto : this.itemDtos) {
			s += itemDto.getProduct().getPrice() * itemDto.getQuantity();
		}
		return s;
	}

	private int exists(Product product) {
		for (int i = 0; i < this.itemDtos.size(); i++) {
			if (this.itemDtos.get(i).getProduct().getId() == product.getId()) {
				return i;
			}
		}
		return -1;
	}

}